#!/bin/sh -e

if [ "$TERM_PROGRAM" != "Apple_Terminal" ]; then
    exit 1;
fi

if [ -n "$BACKGROUND" ]; then
    echo "$BACKGROUND"
    exit 0;
fi

colors=`osascript -e 'tell front window of application "Terminal" to background color'`

if [[ $colors == '0, 0, 0' ]]; then
  echo "dark"
else
  echo "light"
fi
