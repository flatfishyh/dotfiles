#!/bin/sh
set -e

git fetch --prune

git checkout --quiet master
git pull
git branch-prune

if [ -f script/bootstrap ]; then
  script/bootstrap
fi

if [ -f Rakefile ]; then
  task=$(rake --tasks db)
  if [ $? -eq 0 ] && [ -n "$task" ]; then
    rake db:migrate db:test:prepare
    git checkout db/schema.rb
  fi
fi
