# turn off startup message
startup_message off

# change escape leader
escape ^Zz

# utf8
setenv LC_CTYPE en_US.UTF-8
defutf8 on

# default shell
shell zsh

# longer scrollback
defscrollback 15000

# clear screen when exiting a full screen program
altscreen on

# copy screen clipboard to mac clipboard
bind b eval "writebuf" "exec sh -c 'pbcopy < /tmp/screen-exchange'"

# bold colors
attrcolor b ".I"

# status line
hardstatus alwayslastline "%{=b}%{b}%w"

# monitor activity
defmonitor on
activity "<%n>"
silencewait 15
bell_msg "DING! (%n)"
vbell_msg "DING! (%n)"
vbell on

# scrollbars
termcapinfo xterm* ti@:te@

# fix backspace
termcapinfo xterm* 'bc@:bs@'

# emacs keybindings for navigation in copy mode
markkeys l=^F:h=^B:j=^N:k=^P:0=^A:$=^E:^F=^V
bindkey -m -t ^[v    stuff ^B
bindkey -m    ^B     stuff h
bindkey -m -t ^[f    stuff w
bindkey -m -t ^[b    stuff b
