if [ -d /usr/local ]; then
  export PATH=/usr/local/bin:/usr/local/sbin:$PATH
fi

if [ -d ~/.bin ]; then
  export PATH=$HOME/.bin:$PATH
fi

# rip
if [ -d $HOME/Dropbox/rip ]; then
  export RUBYLIB="$HOME/Dropbox/rip/lib:$RUBYLIB"
  export PATH="$HOME/Dropbox/rip/bin:$PATH"
  export RIPDIR=/Volumes/37signals/.rip
  export RIPPROCESSES=4

  unset RIPHELPERS
  eval `rip-config`

  (rip envs | grep system) > /dev/null 2>&1 &&
  rip-push system
fi

# go
export GOROOT=/usr/local/Cellar/go/HEAD
export GOARCH=amd64
export GOOS=darwin
export GOBIN=$GOROOT/bin
