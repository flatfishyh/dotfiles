export PATH=$(defaults read "${HOME}/.MacOSX/environment" PATH)

if [ -d ~/.bin ]; then
  export PATH=$HOME/.bin:$PATH
fi

if [ -s ~/.rvm/scripts/rvm ]; then
  source ~/.rvm/scripts/rvm
fi

# ruby
export RUBYOPT="-Ilib -Itest"

# rip2
export RUBYLIB="$RUBYLIB:$HOME/Dropbox/rip/lib"
export PATH="$PATH:$HOME/Dropbox/rip/bin"
export RIPDIR=/Volumes/37signals/.rip
eval `rip-shell`

# rpg
export PATH="$PATH:$HOME/Dropbox/rpg:$HOME/Dropbox/rpg/work/bin"
export RUBYLIB="$RUBYLIB:$HOME/Dropbox/rpg/work/lib"

export GOROOT=/usr/local/Cellar/go/HEAD
export GOARCH=amd64
export GOOS=darwin
export GOBIN=$GOROOT/bin

export CDPATH=~:/Volumes:/Volumes/37signals

export EDITOR="vim"
export PAGER="less -R"
