export PATH=$(defaults read "${HOME}/.MacOSX/environment" PATH)

if [ -d ~/.bin ]; then
  export PATH=$HOME/.bin:$PATH
fi

if [ -s ~/.rvm/scripts/rvm ]; then
  source ~/.rvm/scripts/rvm
fi

if [ -d ~/.rip ]; then
  RIPDIR=$HOME/.rip
  RUBYLIB="$RUBYLIB:$RIPDIR/active/lib"
  PATH=$RIPDIR/active/bin:$PATH
  export RIPDIR RUBYLIB PATH

  PATH="$HOME/Dropbox/rip/bin:$PATH"
  RUBYLIB="$HOME/Dropbox/rip/lib:$RUYBLIB"
fi

export GOROOT=/usr/local/Cellar/go/HEAD
export GOARCH=amd64
export GOOS=darwin
export GOBIN=$GOROOT/bin

export CDPATH=~:/Volumes:/Volumes/37signals

export EDITOR="emacs"
