# set en_US locale w/ utf-8 encodings
LANG="en_US.UTF-8"
LANGUAGE="en"
LC_CTYPE="en_US.UTF-8"
LC_ALL="en_US.UTF-8"
export LANG LANGUAGE LC_CTYPE LC_ALL

# paths
PATH="/usr/bin:/bin:/usr/sbin:/sbin"

if [ -d "/usr/local" ]; then
  PATH="/usr/local/bin:/usr/local/sbin:$PATH"
fi

if [ -d "$HOME/.bin" ]; then
  PATH="$HOME/.bin:$PATH"
fi

MANPATH="/usr/share/man:/usr/local/share/man"

export PATH MANPATH

# homebrew
source ~/.bash/homebrew

# editor/pager
EDITOR="emacs"
PAGER="less -R"
LESSHISTFILE="-"
export EDITOR PAGER LESSHISTFILE

# colors
CLICOLOR=1
GREP_OPTIONS='--color=auto'
GREP_COLOR='1;32'
BACKGROUND=`$HOME/.bin/background`
export CLICOLOR GREP_OPTIONS GREP_COLOR BACKGROUND

# rip
RIPDEV="/Volumes/37signals/rip"
if [ -d $RIPDEV ]; then
  RUBYLIB="$RIPDEV/lib"
  PATH="$RIPDEV/bin:$PATH"
  RIPDIR="/Volumes/37signals/.rip"
  RIPPROCESSES=4

  export RUBYLIB PATH RIPDIR RIPPROCESSES

  unset RIPHELPERS
  eval `rip-config`

  if [[ -n "$(rip envs | grep system)" ]]; then
    rip-push system
  fi
fi

# bundler
BUNDLE_PATH=".bundle"
BUNDLE_DISABLE_SHARED_GEMS=1
export BUNDLE_PATH BUNDLE_DISABLE_SHARED_GEMS

# ruby
export RUBYLIB="lib:test:$RUBYLIB"
