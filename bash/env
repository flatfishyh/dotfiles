export PATH=$(defaults read "${HOME}/.MacOSX/environment" PATH)

if [ -d ~/.bin ]; then
  export PATH=$HOME/.bin:$PATH
fi

if [ -d /usr/local/Library/Contributions/examples ]; then
  export PATH=/usr/local/Library/Contributions/examples:$PATH
fi

# ruby
export RUBYLIB="lib:test"

# rip
if [ -d $HOME/Dropbox/rip ]; then
  export RUBYLIB="$HOME/Dropbox/rip/lib:$RUBYLIB"
  export PATH="$HOME/Dropbox/rip/bin:$PATH"
  export RIPDIR=/Volumes/37signals/.rip
  export RIPPROCESSES=4

  eval `rip-config`
  eval `rip-completion --zsh`

  (rip envs | grep system) > /dev/null 2>&1 &&
  rip-push system
fi

# go
export GOROOT=/usr/local/Cellar/go/HEAD
export GOARCH=amd64
export GOOS=darwin
export GOBIN=$GOROOT/bin

export CDPATH=~:/Volumes:/Volumes/37signals

export EDITOR="emacs"
export PAGER="less -R"
