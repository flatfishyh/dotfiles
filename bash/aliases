# cd
function cd () {
  builtin cd "$@" > /dev/null
}

# ls
alias ls='ls -Fh' # show type sigil, human size
alias la='ls -A'  # show all
alias ll='ls -Al' # show all in list

# Git
alias g='git'
alias gst='git st'
alias gb='git branch'
alias gba='git branch -a'

# Emacs
alias e='open -a Emacs.app'

# Ruby
alias rst='touch tmp/restart.txt'
