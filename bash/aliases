# cd
function cd () {
  builtin cd "$@" > /dev/null
}

# ls
alias ls='ls -Fh'
alias la='ls -A'

# OS X
alias dsunhook="find . -name .DS_Store -exec rm {} \;"

# Git
alias g='git'
alias gst='git st'
alias gb='git branch'
alias gba='git branch -a'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"

# Emacs
alias e='open -a Emacs.app'

# Ruby
alias ri='ri -f ansi'

# Rails
alias ss='./script/server'
alias sc='./script/console'
alias rst='touch tmp/restart.txt'

# rip
function cap () {
  if [[ $@ == "local externals:setup" ]]; then
    command rip externals
  else
    command cap "$@"
  fi
}
export -f cap
