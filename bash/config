if [[ `whoami` == "root" ]]; then
  PS1="# "
else
  PS1="$ "
fi

CDPATH=".:$HOME:/Volumes:/Volumes/GitHub"

# history
if [ -f "$HOME/Dropbox/.dotfiles/history" ]; then
  HISTFILE="$HOME/Dropbox/.dotfiles/history"
else
  HISTFILE="$HOME/.history"
fi

HISTSIZE=10000
SAVEHIST=10000
HISTFILESIZE=10000
HISTCONTROL="ignoreboth"

# shell-env
if type -P shell-env &>/dev/null; then
  precmd() {
    eval `shell-env`
  }
  PROMPT_COMMAND=precmd
fi
