if [[ `whoami` == "root" ]]; then
  PS1="# "
else
  PS1="$ "
fi

CDPATH=".:$HOME:/Volumes:/Volumes/37signals"

# history
if [ -f "$HOME/Dropbox/.dotfiles/history" ]; then
  HISTFILE="$HOME/Dropbox/.dotfiles/history"
else
  HISTFILE="$HOME/.history"
fi

HISTSIZE=10000
SAVEHIST=10000
HISTFILESIZE=10000
HISTCONTROL="ignoreboth"

# disable less history file
LESSHISTFILE="-"
