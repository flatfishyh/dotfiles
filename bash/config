if [[ `whoami` == "root" ]]; then
  export PS1="# "
else
  export PS1="$ "
fi

if [ -f ~/Dropbox/.dotfiles/history ]; then
  export HISTFILE=~/Dropbox/.dotfiles/history
else
  export HISTFILE=~/.history
fi

export HISTSIZE=10000
export SAVEHIST=10000
export HISTFILESIZE=10000
export HISTCONTROL="ignoredups"

# disable less history file
export LESSHISTFILE="-"

export CDPATH=~:/Volumes:/Volumes/37signals

export EDITOR="emacs"
export PAGER="less -R"

export GREP_OPTIONS='--color=auto' GREP_COLOR='1;32'
export CLICOLOR=1

# homebrew
if [ -d /usr/local/Library/Contributions/examples ]; then
  export PATH=/usr/local/Library/Contributions/examples:$PATH
fi

# ruby
export RUBYLIB="lib:test"
