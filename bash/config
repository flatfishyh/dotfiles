if [[ `whoami` == "root" ]]; then
  PS1="# "
else
  PS1="$ "
fi

# history
if [ -f "~/Dropbox/.dotfiles/history" ]; then
  HISTFILE="~/Dropbox/.dotfiles/history"
else
  HISTFILE="~/.history"
fi

HISTSIZE=10000
SAVEHIST=10000
HISTFILESIZE=10000
HISTCONTROL="ignoreboth"

# disable less history file
LESSHISTFILE="-"
