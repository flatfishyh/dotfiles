autoload -U colors
colors

autoload -U compinit
compinit

fpath=(~/.zsh/functions $fpath)
autoload -U ~/.zsh/functions/*(:t)

autoload -U url-quote-magic
zle -N self-insert url-quote-magic

REPORTTIME=10 # print elapsed time when more than 10 seconds

setopt AUTO_CD
setopt CORRECT
setopt COMPLETE_IN_WORD

bindkey -e

if [[ "$TERM" == "screen" ]]; then
  function preexec() {
    echo -ne "\ek${1%% *}\e\\"
  }
fi

function git() {
  hub $@
}
